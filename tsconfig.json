{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "rewriteRelativeImportExtensions": true,
    "noEmit": true,
    "verbatimModuleSyntax": true
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
